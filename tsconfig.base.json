{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true, // TODO: https://github.com/sindresorhus/got/issues/2051#issuecomment-1259401339
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "noEmitOnError": true,

    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "isolatedModules": true,
    "traceResolution": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "pretty": true,

    "lib": ["ESNext", "ESNext.Array", "DOM"],

    "baseUrl": ".",
    "paths": {
      "*": ["types/*"]
    }
  }
}
